doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title My Notes

    link(rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous")

  body
    main(role="main" class="container")
      form(method="POST", action="/notes")
        p
          label Title
          input(type="text" name="title")
        p
          label Description
          input(type="text" name="description")
        button(type="submit") Add
      table(border=1)
        thead
          th Title
          th Description
          th(colspan=2) Actions
        
        tbody
          each note in notes
            tr
              td= note.title
              td= note.description
              td: a(href=`/notes/${note.id}`) Edit
              td: a(href=`/notes/${note.id}/delete`) Delete
              